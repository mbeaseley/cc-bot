{
  "name": "cc-bot",
  "version": "1.0.0",
  "description": "A general discord bot with multiple functionalities",
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc && tsc-alias && copyfiles -u 1 ./src/assets/images/*.png build",
    "postinstall": "npm run tsc",
    "prestart": "npm run tsc",
    "start": "node ./build/main.js",
    "start:dev": "nodemon -w",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "npm:clear": "rm -rf $PWD/node_modules && rm $PWD/package-lock.json && npm cache verify && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {},
  "dependencies": {
    "@typeit/discord": "^4.0.10",
    "@types/mongodb": "^3.6.19",
    "@types/underscore": "^1.11.3",
    "@types/urban-dictionary": "^3.0.0",
    "@types/ws": "^7.4.6",
    "axios": "^0.21.1",
    "canvas": "^2.8.0",
    "chalk": "^4.1.1",
    "copyfiles": "^2.4.1",
    "dayjs": "^1.10.6",
    "discord.js": "^12.5.3",
    "dotenv": "^9.0.2",
    "minecraft-server-util": "^3.5.2",
    "mongodb": "^3.6.10",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "underscore": "^1.13.1",
    "urban-dictionary": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/mongodb": "^3.6.19",
    "@types/node": "^15.12.4",
    "@types/underscore": "^1.11.3",
    "@types/urban-dictionary": "^3.0.0",
    "@types/ws": "^7.4.6",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.11",
    "prettier": "^2.3.2",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.3.7",
    "tsconfig-paths": "^3.10.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/main.ts",
    "ext": "ts, js"
  }
}
